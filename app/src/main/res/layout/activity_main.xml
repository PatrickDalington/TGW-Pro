<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:background="#C1C0C0"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/purple_200">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good Morning"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            android:id="@+id/greetings"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patrick"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            android:id="@+id/lName"/>

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="5dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:id="@+id/linear"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¦ 00.00"
                                android:textSize="19sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/black"
                                android:id="@+id/wallet"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="19sp"
                                android:layout_marginTop="5dp"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/gift_card"
                                android:textColor="@color/black"
                                android:id="@+id/gift_card"/>


                        </LinearLayout>

                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="I love tgw pro. I have made alot"
                    android:layout_below="@id/toolbar"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:id="@+id/testimony"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:background="@color/black"/>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabTextColor="@color/black"
                    android:fadingEdge="horizontal"/>


            </com.google.android.material.appbar.AppBarLayout>


        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/nav_header_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/nav"
        app:itemTextColor="#A51A10"
        app:itemIconTint="#100101"
        app:menu="@menu/activity_main_drawer"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>